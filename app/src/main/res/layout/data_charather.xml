<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Personaje"
    android:textStyle="bold"
    android:textSize="18sp"/>

<TextView
    android:id="@+id/labelBorn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:drawableLeft="@drawable/ic_born"
    android:drawableStart="@drawable/ic_born"
    android:gravity="center_vertical"
    android:drawablePadding="10dp"
    tools:text="283 AC" />

<TextView
    android:id="@+id/labelActor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:drawableStart="@drawable/ic_actor"
    android:drawableLeft="@drawable/ic_actor"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    tools:text="Kit Harington" />

<TextView
    android:id="@+id/labelQuote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textStyle="italic"
    android:drawableStart="@drawable/ic_quote"
    android:drawableLeft="@drawable/ic_quote"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    tools:text="I know nothing" />

<TextView
    android:id="@+id/labelFather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:drawableStart="@drawable/ic_parents"
    android:drawableLeft="@drawable/ic_parents"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    tools:text="Ned Stark" />

<TextView
    android:id="@+id/labelMother"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:drawableStart="@drawable/ic_parents"
    android:drawableLeft="@drawable/ic_parents"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    tools:text="Madre" />

<TextView
    android:id="@+id/labelSpose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:drawableStart="@drawable/ic_spouse"
    android:drawableLeft="@drawable/ic_spouse"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    tools:text="Sin esposa" />


</LinearLayout>