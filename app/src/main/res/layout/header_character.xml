<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="33dp">

    <ImageView
        android:id="@+id/imgCharacter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/test" />

    <View
        android:id="@+id/imgOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/targaryenOverlay"
        />

    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="John Snow"
        android:layout_above="@+id/labelTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Caballero de la noche y de los 50 reinos de fuego y dragone"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:paddingBottom="16dp" />



</RelativeLayout>

<android.support.design.widget.FloatingActionButton
    android:id="@+id/btnHouse"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:fabSize="normal"
    android:layout_gravity="bottom|end"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="5dp"
    android:scaleType="center"
    android:src="@drawable/ic_targaryen"
    />

</FrameLayout>